<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="60dip"
>
<ImageView 
    android:id="@+id/font_img" 
    android:layout_width="96dip" 
    android:layout_height="24dip" 
    android:layout_marginLeft="10dip"
    android:layout_marginTop="20dip"
    android:gravity="center"
	android:layout_gravity="center"
	android:src="@drawable/imgwating"
 />
<TextView
	android:id="@+id/mp3_name"
	android:layout_width="180dip"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:layout_toRightOf="@id/font_img"
	android:layout_marginLeft="50dip"
    android:layout_marginTop="20dip"
    android:gravity="center"
	android:layout_gravity="center"
	android:singleLine="true"
	android:textSize="10pt"/>
<TextView
	android:id="@+id/mp3_size"
	android:layout_width="180dip"
	android:layout_height="wrap_content"
	android:textSize="10pt"
	android:textColor="#000000"
	android:layout_toRightOf="@id/mp3_name"
	android:visibility="gone"
/>
<TextView
	android:id="@+id/fontdetail_img"
	android:layout_width="0dip"
	android:layout_height="0dip"
/>
<TextView
	android:id="@+id/fontdetail_dl"
	android:layout_width="0dip"
	android:layout_height="0dip"
/>
</RelativeLayout>
